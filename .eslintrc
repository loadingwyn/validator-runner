{
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },

  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": ["prettier", "eslint:recommended"],
  "parser": "babel-eslint",
  "rules": {
    "func-names": 0,
    "arrow-parens": ["error", "as-needed"],
    "no-mixed-operators": 0
  }
}
